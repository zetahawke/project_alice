span.card-title
  | Stocks
hr
br
table.table.responsive-table
  thead
    tr
      th
        | Amount
      th
        | Product
      th[colspan="3"]
  tbody
    - @stocks.each do |stock|
      tr
        td
          = stock.amount
        td
          = stock.product_id
        td
          = link_to 'Show', stock
        td
          = link_to 'Edit', edit_admin_stock_path(stock)
        td
          = link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' }
br
= link_to 'New Stock', new_admin_stock_path, class: 'btn'
